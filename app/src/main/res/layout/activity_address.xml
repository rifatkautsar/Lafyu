<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddressActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:backgroundTint="@color/White"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/imgback"
                        android:layout_width="wrap_content"
                        android:src="@drawable/ic_back"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Ship to"
                        android:layout_toRightOf="@id/imgback"
                        android:layout_marginStart="5dp"
                        android:textSize="15sp"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/ic_plus"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/toolbar"
        android:padding="15dp"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="15dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="18dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tvnameaddress"
                    android:layout_width="wrap_content"
                    android:text="John Reese"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvaddress"
                    android:layout_marginTop="10dp"
                    android:layout_width="290dp"
                    android:layout_below="@id/tvnameaddress"
                    android:textSize="11sp"
                    android:textColor="@color/Gray"
                    android:text="3711 Spring Hill Rd undefined Tallahassee, Nevada 52874 United States"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvphonenumberaddress"
                    android:layout_width="wrap_content"
                    android:text="+99 1234567890"
                    android:layout_below="@id/tvaddress"
                    android:layout_marginTop="15dp"
                    android:textSize="11sp"
                    android:textColor="@color/Gray"
                    android:layout_height="wrap_content"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_below="@id/tvphonenumberaddress"
                    android:layout_height="wrap_content">

                    <Button
                        android:layout_width="70dp"
                        android:text="Edit"
                        android:textAllCaps="false"
                        android:id="@+id/btneditaddress"
                        android:backgroundTint="@color/background"
                        android:layout_height="80dp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_toRightOf="@id/btneditaddress"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_trash"
                        android:layout_marginStart="10dp"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>